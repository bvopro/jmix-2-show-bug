<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://inspectionListView.title"
      focusComponent="inspectionsDataGrid">
    <data>
        <collection id="inspectionsDc"
                    class="com.company.sample2.entity.Inspection">
            <fetchPlan extends="_base">
                <property name="case" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="inspectionsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Inspection e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="inspectionsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="inspectionsDataGrid.create"/>
            <button id="editBtn" action="inspectionsDataGrid.edit"/>
            <button id="removeBtn" action="inspectionsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="inspectionsDl"/>
        </hbox>
        <dataGrid id="inspectionsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="inspectionsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="inspectionDate"/>
                <column property="case"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
